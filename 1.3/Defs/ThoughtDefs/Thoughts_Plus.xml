<Defs>
  
  
	<!-- Violence Related -->
  
  <ThoughtDef ParentName="DeathMemory">
    <defName>ViolenceWitnessedGood</defName>
	<thoughtClass>MemesPlus.Thoughts.Worker_Violence</thoughtClass>
    <durationDays>10</durationDays>
    <stackLimit>5</stackLimit>
